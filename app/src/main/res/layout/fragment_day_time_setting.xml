                        android:id="@+id/day_6_slider"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="56dp"
                        android:layout_toEndOf="@+id/time_6_edit_text"
                        android:checked="false"
                        android:textColor="?colorSecondaryVariant"
                        android:textOff="@string/every_day"
                        android:textOn="@string/day_after"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:thumb="@drawable/custom_switch"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:showText="true"
                        app:track="@drawable/custom_switchtrack" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/time_6_delete_button"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/day_6_slider"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="80dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/confirm_red_button"
                        android:text="@string/delete_button"
                        android:textColor="@color/white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toEndOf="@+id/time_6_submit_button"
                        app:layout_constraintTop_toBottomOf="@+id/day_6_slider" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/time_6_submit_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/day_6_slider"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="80dp"
                        android:layout_marginBottom="12dp"
                        android:layout_toEndOf="@+id/time_6_delete_button"
                        android:background="@drawable/confirm_button"
                        android:text="@string/send_button"
                        android:textColor="@color/white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>


        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>